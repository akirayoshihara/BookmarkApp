<p id="notice"><%= notice %></p>
<!--追加-->
<p>
  <%= link_to '#', id: 'bookmark-link' do %>
      <i class="fa fa-bookmark fa-2x"></i>
  <% end %>
</p>

<!--リンク先を設定。remote: :trueも設定。-->
<p>
  <%= link_to post_bookmarks_toggle_path(@post) , id: 'bookmark-link', remote: true do %>
